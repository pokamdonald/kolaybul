<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- ðŸ”¹ App Bar -->
    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/rounded_appbar"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- ðŸ”¹ Scroll View Starts Below App Bar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ”¹ Centered Camera Box -->
            <LinearLayout
                android:id="@+id/boxImageUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="54dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgItem"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add"
                    android:contentDescription="Add Image"
                    app:shapeAppearanceOverlay="@style/CustomRoundedImage"
                    android:background="@drawable/input_background"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- ðŸ”¹ Item Title -->
            <EditText
                android:id="@+id/edtItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Title"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Lost/Found Radio -->
            <RadioGroup
                android:id="@+id/radioGroupLostFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioLost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost"
                    android:textSize="14sp"
                    android:buttonTint="@android:color/black"
                    android:textColor="@android:color/black"/>

                <RadioButton
                    android:id="@+id/radioFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Found"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:buttonTint="@android:color/black"
                    android:textColor="@android:color/black"/>
            </RadioGroup>

            <!-- ðŸ”¹ Description -->
            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Description"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:maxLines="5"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Location Found -->
            <EditText
                android:id="@+id/txtSelectedLocationFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location Found"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Location to Collect -->
            <EditText
                android:id="@+id/txtSelectedLocationCollect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location to Collect"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Date -->
            <EditText
                android:id="@+id/txtSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date (YYYY-MM-DD)"
                android:textColorHint="@color/white"
                android:inputType="date"
                android:padding="12dp"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Category Spinner -->
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Phone -->
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter phone number (with country code)"
                android:textColorHint="@color/white"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- ðŸ”¹ Submit -->
            <Button
                android:id="@+id/btnSubmitItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
