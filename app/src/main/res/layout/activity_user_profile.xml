<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UserProfileActivity">

    <!-- ðŸ”¹ Backward Icon -->
    <ImageView
        android:id="@+id/backward"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/backward"
        android:contentDescription="Backward Icon"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:tint="@color/app_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp" />

    <!-- ðŸ”¹ Profile Picture -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/account"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"
        app:strokeWidth="3dp"
        app:strokeColor="@color/app_primary"
        app:shapeAppearanceOverlay="@style/CustomRoundedImage"
        app:layout_constraintTop_toBottomOf="@id/backward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- ðŸ”¹ Camera Icon (Improved Visibility) -->
    <ImageView
        android:id="@+id/cameraIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_camera"
        android:contentDescription="Camera Icon"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:elevation="8dp"
        android:background="@drawable/rounded_box"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/profilePicture"
        app:layout_constraintEnd_toEndOf="@id/profilePicture"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-6dp" />

    <!-- ðŸ”¹ User Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”¹ Name & Surname -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/app_primary"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/app_primary"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ðŸ”¹ Email -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/app_primary"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¹ Student Number -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/app_primary"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/studentNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¹ Phone Number -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/app_primary">

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000000"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
