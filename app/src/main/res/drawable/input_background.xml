<!-- res/drawable/input_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="@color/app_primary"/> <!-- Use app_primary color for the background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/app_primary"/> <!-- Use app_primary color for the border -->

    <!-- Rounded Corners -->
    <corners android:radius="8dp"/> <!-- Rounded corners with 8dp radius -->

    <!-- Padding (Optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>